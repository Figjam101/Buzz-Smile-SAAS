{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build",
        "installCommand": "cd client && npm ci",
        "buildCommand": "cd client && CI=false npm run build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://buzz-smile-saas-production.up.railway.app/api/$1"
    },
    {
      "source": "/admin/(.*)",
      "destination": "https://buzz-smile-saas-production.up.railway.app/api/admin/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "github": {
    "silent": true
  }
}