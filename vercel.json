{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://buzz-smile-saas-production.up.railway.app/api/$1" },
    { "source": "/admin/(.*)", "destination": "https://buzz-smile-saas-production.up.railway.app/api/admin/$1" }
  ]
}