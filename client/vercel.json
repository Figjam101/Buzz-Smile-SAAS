{
  "version": 2,
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "cache-control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://buzz-smile-saas-production.up.railway.app/api/$1"
    },
    {
      "source": "/admin/(.*)",
      "destination": "https://buzz-smile-saas-production.up.railway.app/api/admin/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}